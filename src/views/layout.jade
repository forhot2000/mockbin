doctype html
html
  head
    meta(charset='utf-8')

    title Mockbin by Mashape

    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

    link(rel='stylesheet', type='text/css', href='/static/assets/bootstrap.min.css', media='all')
    link(rel='stylesheet', type='text/css', href='/static/assets/fonts.css', media='all')
    link(rel='stylesheet', type='text/css', href='/static/assets/font-awesome.css', media='all')
    link(rel='stylesheet', type='text/css', href='/static/assets/github.min.css', media='all')
    link(rel='stylesheet', type='text/css', href='/static/main.css', media='all')

    script(type='text/javascript', src='/static/assets/jquery.min.js')
    script(type='text/javascript', src='/static/assets/bootstrap.min.js')
    script(type='text/javascript', src='/static/assets/highlight.min.js')
    script(type='text/javascript', src='/static/assets/ZeroClipboard.min.js')

    block head

  body
    block header
      nav.navbar.navbar-default
        div.container
          div.navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
              span.icon-bar
              span.icon-bar
              span.icon-bar

            div.navbar-brand
              a(href='/') mockbin

          div#navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              for link, name in [{name: 'Create Bin', href: '/bin/create'}, {name: 'Docs', href: 'https://github.com/Mashape/mockbin/tree/master/docs'}, {name: 'Github', href: 'https://github.com/Mashape/mockbin'}]
                li(class={active: req.originalUrl === link.href}): a(href= link.href)= link.name

    block content

    block scripts
